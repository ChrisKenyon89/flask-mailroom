{% extends 'base.jinja2' %}

{% block subtitle %}Add a donation{% endblock subtitle %}

{% block content %}
	<ul>
		{% for donor	in donors %}
		<li>
			{{ donor.donor_name }}
		</li>
		{% endfor %}
	</ul>
	<form method="POST">
		<label for="name-input">Name:</label><input id="name-input" type="text" name="name">
		<label for="amount-input">Amount:</label><input id="amount-input" type="text" name="amount">
		<input type="submit" value="Create Donation">
	</form>
{% endblock content %}