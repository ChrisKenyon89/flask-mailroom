{% extends 'base.jinja2' %}

{% block subtitle %}Delete a donor{% endblock subtitle %}

{% block content %}
	<ul>
		{% for donor in donors %}
		<li>
			{{ donor.donor_name }}
		</li>
		{% endfor %}
	</ul>
	<form method="POST">
		<label for="name-input">Name:</label><input id="name-input" type="text" name="name">
		<input type="submit" value="Delete Donor">
	</form>
{% endblock content %}